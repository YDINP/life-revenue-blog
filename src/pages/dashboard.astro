      async function fetchAnalytics() {
        try {
          // Fetch analytics events from REST API
          const res = await fetch(
            `${SUPABASE_URL}/rest/v1/analytics?select=event_type,metadata,created_at&order=created_at.desc&limit=500`,
            { headers }
          );
          if (!res.ok) throw new Error('Analytics fetch failed');
          return await res.json();
        } catch (e) {
          console.warn('Analytics fetch error:', e);
          return [];
        }
      }

      function processAnalytics(events) {
        let pageviews = 0, coupangClicks = 0, newsletters = 0;
        const dailyViews = {};
        const recentActivity = [];

        events.forEach(e => {
          const meta = typeof e.metadata === 'string' ? JSON.parse(e.metadata) : (e.metadata || {});
          const path = meta.path || meta.slug || '';

          // Filter to LifeFlow paths only (not /blog/ai/, /blog/dev/, etc.)
          const isLifeFlow = meta.source === 'lifeflow' ||
            path.includes('/blog/2026-02-0') ||
            ['lifestyle','finance','health','education','travel'].some(c => path.includes(`/blog/${c}`));

          if (e.event_type === 'pageview') {
            if (isLifeFlow || !path.startsWith('/blog/')) {
              pageviews++;
              const day = e.created_at?.substring(0, 10);
              if (day) dailyViews[day] = (dailyViews[day] || 0) + 1;
            }
          } else if (e.event_type === 'coupang_click' && isLifeFlow) {
            coupangClicks++;
          } else if (e.event_type === 'newsletter_subscribe' && (meta.source === 'lifeflow' || !meta.source)) {
            newsletters++;
          }

          if (recentActivity.length < 10 && isLifeFlow) {
            recentActivity.push(e);
          }
        });

        return { pageviews, coupangClicks, newsletters, dailyViews, recentActivity };
      }

      function renderBarChart(dailyViews) {
        const container = document.getElementById('bar-chart');
        const days = [];
        for (let i = 13; i >= 0; i--) {
          const d = new Date();
          d.setDate(d.getDate() - i);
          const key = d.toISOString().substring(0, 10);
          days.push({ date: key, views: dailyViews[key] || 0 });
        }

        const maxVal = Math.max(...days.map(d => d.views), 1);

        if (days.every(d => d.views === 0)) {
          container.innerHTML = empty('ğŸ“Š', 'í˜ì´ì§€ë·° ë°ì´í„°ê°€ ì•„ì§ ì—†ìŠµë‹ˆë‹¤');
          return;
        }

        container.innerHTML = days.map(d => {
          const h = Math.max(2, (d.views / maxVal) * 160);
          const dt = new Date(d.date);
          const label = `${dt.getMonth()+1}/${dt.getDate()}`;
          return `<div class="bar-group">
            <div class="bar-value">${d.views > 0 ? d.views : ''}</div>
            <div class="bar-fill" style="height:${h}px" title="${label}: ${d.views}ë·°"></div>
            <span class="bar-label">${label}</span>
          </div>`;
        }).join('');
      }

