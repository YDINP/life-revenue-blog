      :root {
        --dash-bg: #0f172a;
        --dash-surface: #1e293b;
        --dash-surface-hover: #334155;
        --dash-border: #334155;
        --dash-text: #f1f5f9;
        --dash-text-dim: #94a3b8;
        --dash-accent: #3b82f6;
        --dash-green: #22c55e;
        --dash-yellow: #eab308;
        --dash-red: #ef4444;
        --dash-purple: #a855f7;
        --dash-orange: #f97316;
        --dash-pink: #ec4899;
        --dash-cyan: #06b6d4;
      }

      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--dash-bg);
        color: var(--dash-text);
        min-height: 100vh;
      }

      .dash-header {
        background: var(--dash-surface);
        border-bottom: 1px solid var(--dash-border);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .dash-header h1 {
        font-size: 1.25rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .dash-header .logo { color: var(--dash-green); }

      .dash-header .meta {
        font-size: 0.8125rem;
        color: var(--dash-text-dim);
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .live-dot {
        width: 8px; height: 8px;
        background: var(--dash-green);
        border-radius: 50%;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.4; }
      }

      .dash-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem;
      }

      /* Summary Cards */
      .summary-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .summary-card {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        padding: 1.25rem;
      }

      .summary-card .label {
        font-size: 0.75rem;
        color: var(--dash-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
      }

      .summary-card .value {
        font-size: 2rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 0.25rem;
      }

      .summary-card .sub {
        font-size: 0.75rem;
        color: var(--dash-text-dim);
      }

      /* Category Cards */
      .cat-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 0.75rem;
        margin-bottom: 1.5rem;
      }

      .cat-card {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 10px;
        padding: 1rem;
        text-align: center;
        transition: border-color 0.2s;
      }

      .cat-card:hover { border-color: var(--dash-accent); }

      .cat-card .cat-icon { font-size: 1.5rem; margin-bottom: 0.5rem; }
      .cat-card .cat-name { font-size: 0.8125rem; font-weight: 600; margin-bottom: 0.25rem; }
      .cat-card .cat-count { font-size: 0.75rem; color: var(--dash-text-dim); }

      /* Chart Section */
      .chart-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .chart-panel {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        padding: 1.25rem;
      }

      .chart-panel h3 {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--dash-text-dim);
      }

      /* Bar Chart */
      .bar-chart {
        display: flex;
        align-items: flex-end;
        gap: 6px;
        height: 180px;
        padding-top: 1rem;
      }

      .bar-group {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        height: 100%;
        justify-content: flex-end;
      }

      .bar-fill {
        width: 100%;
        border-radius: 4px 4px 0 0;
        background: linear-gradient(180deg, var(--dash-accent), var(--dash-green));
        transition: height 0.5s ease;
        min-height: 2px;
      }

      .bar-label {
        font-size: 0.625rem;
        color: var(--dash-text-dim);
      }

      .bar-value {
        font-size: 0.5625rem;
        color: var(--dash-text-dim);
      }

      /* Donut */
      .donut-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      }

      .donut-svg { width: 160px; height: 160px; }

      .donut-legend {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
      }

      .legend-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 0.8125rem;
      }

      .legend-dot {
        width: 10px; height: 10px;
        border-radius: 50%;
        margin-right: 0.5rem;
      }

      .legend-name {
        display: flex;
        align-items: center;
        color: var(--dash-text-dim);
      }

      .legend-value { font-weight: 600; }

      /* Posts Table */
