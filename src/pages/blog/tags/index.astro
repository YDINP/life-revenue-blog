---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const allPostModules = await import.meta.glob('../../../blog/**/*.md', { eager: true });
const allPosts = Object.values(allPostModules);

// Collect all tags and their counts
const tagCounts = new Map();
allPosts.forEach(post => {
  const tags = post.frontmatter.tags || [];
  tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by count (descending) then alphabetically (Korean-aware)
const sortedTags = Array.from(tagCounts.entries())
  .sort((a, b) => {
    if (b[1] !== a[1]) return b[1] - a[1];
    return a[0].localeCompare(b[0], 'ko');
  });

const maxCount = sortedTags.length > 0 ? Math.max(...sortedTags.map(t => t[1])) : 1;
const minCount = sortedTags.length > 0 ? Math.min(...sortedTags.map(t => t[1])) : 1;
---

<BaseLayout
  title="태그 목록"
  description="블로그 글을 태그별로 탐색하세요."
>
  <div class="tags-page">
    <header class="tags-header">
      <a href="/blog/" class="back-link">&larr; 전체 글</a>
      <h1>태그 목록</h1>
      <p>총 {sortedTags.length}개의 태그 · {allPosts.length}개의 글</p>
    </header>

    <div class="tag-cloud">
      {sortedTags.map(([tag, count]) => {
        const sizeScale = minCount === maxCount ? 1 :
          0.85 + ((count - minCount) / (maxCount - minCount)) * 0.95;
        const fontSize = `${sizeScale}rem`;

        return (
          <a
            href={`/blog/tags/${encodeURIComponent(tag)}/`}
            class="tag-pill"
            style={`font-size: ${fontSize}`}
            title={`${count}개의 글`}
          >
            #{tag}
            <span class="tag-count">{count}</span>
          </a>
        );
      })}
    </div>

    {sortedTags.length === 0 && (
      <div class="empty-state">
        <p>아직 태그가 없습니다.</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .tags-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .tags-header {
    margin-bottom: 2.5rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .tags-header h1 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .tags-header p {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    padding: 2rem;
    background: var(--color-bg-secondary);
    border-radius: 16px;
    border: 1px solid var(--color-border);
    justify-content: center;
  }

  .tag-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    background: var(--color-bg);
    color: var(--color-primary);
    border: 1.5px solid var(--color-primary);
    border-radius: 20px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .tag-pill:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
  }

  .tag-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 0.375rem;
    background: var(--color-primary);
    color: white;
    border-radius: 10px;
    font-size: 0.7rem;
    font-weight: 700;
  }

  .tag-pill:hover .tag-count {
    background: white;
    color: var(--color-primary);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 640px) {
    .tags-header h1 {
      font-size: 1.5rem;
    }

    .tag-cloud {
      padding: 1.25rem;
      justify-content: flex-start;
    }

    .tag-pill {
      font-size: 0.875rem !important;
      padding: 0.375rem 0.75rem;
    }
  }
</style>
