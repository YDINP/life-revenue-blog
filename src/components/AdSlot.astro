---
/**
 * AdSlot - Google AdSense 광고 슬롯
 *
 * data-ad-slot이 비어있으면 렌더링하지 않음 (auto-ads가 대신 처리).
 * 실제 광고 단위 ID가 생기면 AD_SLOT_IDS에 추가.
 */
interface Props {
  position?: 'top' | 'bottom' | 'sidebar';
}

const { position = 'bottom' } = Astro.props;

// 구글 애드센스 대시보드에서 광고 단위 생성 후 여기에 ID 입력
const AD_SLOT_IDS: Record<string, string> = {
  top: '',
  bottom: '',
  sidebar: '',
};

const slotId = AD_SLOT_IDS[position] || '';
---

{slotId && (
  <div class="ad-slot" data-ad-position={position}>
    <ins class="adsbygoogle"
      style="display:block"
      data-ad-client="ca-pub-9400779918671270"
      data-ad-slot={slotId}
      data-ad-format="auto"
      data-full-width-responsive="true"></ins>
    <script is:inline>(adsbygoogle = window.adsbygoogle || []).push({});</script>
  </div>
)}

<style>
.ad-slot {
  min-height: 100px;
  margin: 2rem 0;
  text-align: center;
}
</style>
